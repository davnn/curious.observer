{
  "name": "curious.observer",
  "version": "0.0.1",
  "description": "Github-pages based website for curious.observer",
  "repository": "https://github.com/davnn/curious.observer",
  "main": "src/scripts/index.ts",
  "scripts": {
    "accessibility": "a11y public/**/*.html",
    "clean": "rm -rf public",
    "lint:style": "stylelint src/styles/*.scss src/styles/**/*.scss",
    "lint:scripts": "tslint --project tsconfig.json --type-check src/scripts/*.ts src/srcipts/**/*.ts",
    "build:jekyll": "JEKYLL_ENV=production bundle exec jekyll build",
    "build:webpack": "webpack -p --config webpack.production.js",
    "build": "run-s clean build:webpack build:jekyll",
    "watch:jekyll": "JEKYLL_ENV=development bundle exec jekyll build --watch --incremental --config _config.yml,_config-dev.yml",
    "watch:webpack": "webpack-dev-server --inline --hot --watch-content-base --config webpack.development.js",
    "start": "npm run clean && run-p watch:jekyll watch:webpack"
  },
  "author": "David Muhr <dm@curious.observer>, <@davnn>",
  "license": "MIT",
  "devDependencies": {
    "a11y": "^0.5.0",
    "autoprefixer": "^7.1.2",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "postcss": "^6.0.7",
    "postcss-csso": "^2.0.0",
    "postcss-flexbugs-fixes": "^3.0.0",
    "postcss-loader": "^2.0.6",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-order": "^0.6.0",
    "stylelint-scss": "^1.5.1",
    "stylelint-webpack-plugin": "^0.8.0",
    "ts-loader": "^2.3.0",
    "tslint": "^5.5.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "typescript": "^2.4.1",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1"
  },
  "dependencies": {
    "sanitize.css": "^5.0.0"
  }
}
