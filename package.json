{
  "name": "curious.observer",
  "version": "0.0.1",
  "description": "Github-pages based website for curious.observer",
  "repository": "https://github.com/davnn/curious.observer",
  "main": "src/scripts/index.ts",
  "scripts": {
    "accessibility": "a11y public/**/*.html",
    "clean": "rm -rf public",
    "docker": "docker build -t curiousobserver .",
    "watch:docker": "docker run -v $(pwd):/usr/src/app curiousobserver build --watch --force_polling --incremental --config _config.yml,_config-dev.yml",
    "build:docker": "docker run -v $(pwd):/usr/src/app -e JEKYLL_ENV=production curiousobserver build --config _config.yml",
    "build:webpack": "webpack -p --config webpack.production.js",
    "watch:webpack": "webpack-dev-server --inline --hot --watch-content-base --config webpack.development.js",
    "start": "npm run clean && npm run docker && run-p watch:docker watch:webpack",
    "build": "run-s clean docker build:webpack build:docker"
  },
  "author": "David Muhr <dm@curious.observer>, <@davnn>",
  "license": "MIT",
  "devDependencies": {
    "a11y": "^0.5.0",
    "autoprefixer": "^7.1.4",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss": "^6.0.11",
    "postcss-csso": "^2.0.0",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.6",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-order": "^0.6.0",
    "stylelint-scss": "^2.1.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "ts-loader": "^2.3.7",
    "tslint": "^5.7.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "typescript": "^2.5.2",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.8.2"
  },
  "dependencies": {
    "sanitize.css": "^5.0.0"
  }
}
